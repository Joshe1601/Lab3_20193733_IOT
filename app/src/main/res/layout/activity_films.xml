<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilmsActivity">

    <include
        android:id="@+id/abFilms"
        layout="@layout/ab_films"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layoutTitleFilm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/abFilms">

        <TextView
            android:id="@+id/titleFilm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:padding="5dp"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/shape_title"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutFilmDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/layoutTitleFilm">

        <ImageView
            android:id="@+id/imageFilm"
            android:layout_width="160dp"
            android:layout_height="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/layoutTitleFilm"
            app:layout_constraintVertical_bias="0.25"
            app:srcCompat="@drawable/posters_de_peliculas" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:shrinkColumns="0"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TableRow
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/labelDirector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Director: "
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_title"/>

                <TextView
                    android:id="@+id/director"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_film_detail"/>
            </TableRow>

            <TableRow
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/labelActors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actores: "
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_title"/>

                <TextView
                    android:id="@+id/actors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_film_detail"/>
            </TableRow>

            <TableRow
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/labelDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha estreno: "
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_title"/>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_film_detail"/>
            </TableRow>

            <TableRow
                android:layout_marginTop="10dp">


                <TextView
                    android:id="@+id/labelGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GÃ©neros: "
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_title"/>

                <TextView
                    android:id="@+id/genre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_film_detail"/>
            </TableRow>

            <TableRow
                android:layout_marginTop="10dp">


                <TextView
                    android:id="@+id/labelWriters"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_title"
                    android:padding="5dp"
                    android:text="Escritores: "
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/writers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_film_detail"/>
            </TableRow>

            <TableRow
                android:layout_marginTop="10dp">


                <TextView
                    android:id="@+id/labelAbout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trama: "
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_title"/>

                <ScrollView
                    android:id="@+id/about"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:background="@drawable/shape_film_detail">

                        <TextView
                            android:id="@+id/aboutText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="14sp"
                            android:padding="10dp"
                            android:textColor="@color/white" />


                </ScrollView>

            </TableRow>

        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/layoutFilmDetail">


        <LinearLayout
            android:id="@+id/layoutTitleRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/abFilms">

            <TextView
                android:id="@+id/titleRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Ratings de la pelicula"
                android:padding="5dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/shape_title"/>

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TableRow
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/labelIMDB"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:text="Internet Movie Database: "
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_title"/>

                <TextView
                    android:id="@+id/labelRT"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:text="Rotten Tomatoes: "
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_title"/>

                <TextView
                    android:id="@+id/labelMetaCritic"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:text="Metacritic: "
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_title"/>
            </TableRow>

            <TableRow
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/imdb"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_film_detail"/>

                <TextView
                    android:id="@+id/rt"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_film_detail"/>

                <TextView
                    android:id="@+id/metaCritic"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_film_detail"/>

            </TableRow>

        </TableLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/layoutRating">

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/checkBox"
            android:text="EstÃ¡s de acuerdo con la informaciÃ³n brindada"/>

        <Button
            android:id="@+id/button_calculator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Regresar"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:padding="5dp"
            android:background="@drawable/shape_button"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>